# for more options : https://github.com/alacritty/alacritty/blob/master/alacritty.yml
---

key_bindings:
  - { key: F11, action: ToggleFullscreen }
  # navigation in vim mode but for command line stuff (not Vi Mode)
  - { key: H, mods: Control|Shift, chars: "\e[1;5D" }
  - { key: L, mods: Control|Shift, chars: "\e[1;5C" }
  # since this is already taken by tmux on moving between panes
  - { key: H, mods: Control|Shift|Alt, chars: "\e[D" }
  - { key: L, mods: Control|Shift|Alt, chars: "\e[C" }
  - { key: K, mods: Control|Shift, chars: "\e[A" }
  - { key: J, mods: Control|Shift, chars: "\e[B" }
  # - { key: G, mods: Control, chars: "\x02\x54" }
  # Run custom command line
  - { key: P, mods: Control, chars: "tmux-jump\n" }

window:
  opacity: 0.70

# font:
#   normal:
#     family: "Hack"
#     style: Regular
colors:
  name: 3024 (dark)
  author: Chris Kempson
  primary:
    background: "#090300"
    foreground: "#a5a2a2"
  cursor:
    text: "#090300"
    cursor: "#a5a2a2"
  normal:
    black: "#090300"
    red: "#db2d20"
    green: "#01a252"
    yellow: "#fded02"
    blue: "#01a0e4"
    magenta: "#a16a94"
    cyan: "#b5e4f4"
    white: "#a5a2a2"
  bright:
    black: "#5c5855"
    red: "#db2d20"
    green: "#01a252"
    yellow: "#fded02"
    blue: "#01a0e4"
    magenta: "#a16a94"
    cyan: "#b5e4f4"
    white: "#f7f7f7"

theme: 3024.dark
dynamic_title: true
